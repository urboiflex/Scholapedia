<%@ Page Language="C#" AutoEventWireup="true" CodeBehind="main.aspx.cs" Inherits="WAPPSS.main" %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scholapedia Main Content</title>
    <link rel="stylesheet" href="css/main.css">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="main-content">
       <!-- Hero Section -->
    <div class="hero-bg-wrapper">
        <section class="hero-container">
            <div class="hero-text">
                <h1 class="hero-headline">Your Journey to Mastery Begins Here</h1>
                <p class="hero-subtext">Explore a world of curated courses and personalized learning paths designed to elevate your skills and transform your future.</p>
                <p class="hero-small-text">Access 1000+ courses in tech, business, and creative fields</p>
                <a href="register.aspx"><button class="button">Get Started</button></a>
            </div>
            <div class="hero-image">
                <div class="tag floating-tag">eLearning Platform</div>
                <img src="images/Person3.png" alt="Student smiling" class="person-image">

                
                <!-- Floating UI Elements -->
                <div class="floating-icon icon-1">
                    <img src="https://cdn-icons-png.flaticon.com/512/2991/2991148.png" alt="Google icon">
                </div>
                <div class="floating-icon icon-2">
                    <img src="https://cdn-icons-png.flaticon.com/512/5968/5968534.png" alt="Checkmark icon">
                </div>
                <div class="floating-icon icon-3">
                    <img src="images/sap.png" alt="Certificate icon">
                </div>
                <div class="floating-icon icon-4">
                    <img src="https://cdn-icons-png.flaticon.com/512/732/732221.png" alt="Microsoft icon">
                </div>
                <div class="floating-icon icon-5">
                    <img src="images/adobe.png" alt="Adobe icon">
                </div>
                <div class="floating-icon icon-6">
                    <img src="https://cdn-icons-png.flaticon.com/512/5968/5968292.png" alt="Java icon">
                </div>
                
                <!-- Geometric Shapes -->
                <div class="floating-shape triangle green"></div>
                <div class="floating-shape triangle orange"></div>
                <div class="floating-shape circle1"></div>
                <div class="floating-shape circle2"></div>
                <div class="floating-shape circle3"></div>
            </div>
        </section>
        <div class="hero-bg-bottom"></div>
    </div>

</body>
</html> 